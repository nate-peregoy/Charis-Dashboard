    category: 'Strategic Grants',
    location: 'International',
    partnership: '2015-Present',
    totalGranted: 850000,
    currentGrant: 100000,
    status: 'Active',
    focus: 'Church planting, missionary support, indigenous leadership',
    website: 'https://example.org'
  },
  {
    id: 4,
    name: 'Christian Leadership Institute',
    category: 'Ministry Leadership Development',
    location: 'Nashville, TN',
    partnership: '2019-Present',
    totalGranted: 290000,
    currentGrant: 45000,
    status: 'Active',
    focus: 'Executive coaching, organizational development, strategic planning',
    website: 'https://example.org'
