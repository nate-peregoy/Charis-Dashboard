  {
    id: 1,
    name: 'Nashville Hope Center',
    category: 'Ministry Leadership Development',
    location: 'Nashville, TN',
    partnership: '2018-Present',
    totalGranted: 425000,
    currentGrant: 50000,
    status: 'Active',
    focus: 'Urban ministry, pastoral training, community development',
    website: 'https://example.org'
  },
  {
    id: 2,
    name: 'Faith & Work Initiative',
    category: 'Faith & Work',
    location: 'Multiple US Cities',
    partnership: '2020-Present',
    totalGranted: 380000,
    currentGrant: 75000,
    status: 'Active',
    focus: 'Marketplace ministry, professional discipleship, workplace ethics',
    website: 'https://example.org'
  },
  {
    id: 3,
