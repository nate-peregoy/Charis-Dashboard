---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';

// Get the authenticated user from Clerk
const { userId } = Astro.locals.auth();

if (!userId) {
  return Astro.redirect('/sign-in');
}
---

<Layout title="Settings - Dashboard">
  <div class="min-h-screen bg-gray-50">
    <Header title="Settings" />

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">
          Dashboard Settings
        </h2>
        
        <div class="space-y-6">
          <!-- Account Settings -->
          <div class="border-b border-gray-200 pb-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Account Settings</h3>
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Email Notifications
                </label>
                <label class="inline-flex items-center">
                  <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" checked />
                  <span class="ml-2 text-sm text-gray-600">Receive email notifications</span>
                </label>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Dashboard Theme
                </label>
                <select class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md">
                  <option>Light</option>
                  <option>Dark</option>
                  <option>Auto</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Privacy Settings -->
          <div class="border-b border-gray-200 pb-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Privacy</h3>
            <div class="space-y-4">
              <label class="inline-flex items-center">
                <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                <span class="ml-2 text-sm text-gray-600">Make profile public</span>
              </label>
              
              <label class="inline-flex items-center">
                <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" checked />
                <span class="ml-2 text-sm text-gray-600">Allow search engines to index profile</span>
              </label>
            </div>
          </div>

          <!-- Save Button -->
          <div class="flex justify-end">
            <button 
              type="button"
              class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition font-medium"
            >
              Save Changes
            </button>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>
