---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Charis Foundation Board Portal" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <style>
      /* Design System - Cool Professional Foundation */
      :root {
        /* Color System - Cool slate/blue-gray foundation for trust & sophistication */
        --color-bg-base: #f8f9fb;
        --color-bg-surface: #ffffff;
        --color-bg-subtle: #f1f3f5;
        --color-bg-hover: #e9ecef;
        
        /* Text hierarchy - 4 levels */
        --color-text-primary: #0f1419;
        --color-text-secondary: #505a66;
        --color-text-muted: #6f7a87;
        --color-text-faint: #9ba3ae;
        
        /* Borders - subtle, professional */
        --color-border: rgba(15, 20, 25, 0.08);
        --color-border-subtle: rgba(15, 20, 25, 0.05);
        --color-border-strong: rgba(15, 20, 25, 0.12);
        
        /* Accent - professional blue for trust */
        --color-accent: #2563eb;
        --color-accent-hover: #1d4ed8;
        --color-accent-light: #dbeafe;
        --color-accent-subtle: #eff6ff;
        
        /* Status colors - refined for professional context */
        --color-success: #059669;
        --color-success-bg: #d1fae5;
        --color-warning: #d97706;
        --color-warning-bg: #fef3c7;
        --color-error: #dc2626;
        --color-error-bg: #fee2e2;
        
        /* Spacing - 4px grid system */
        --space-1: 4px;
        --space-2: 8px;
        --space-3: 12px;
        --space-4: 16px;
        --space-6: 24px;
        --space-8: 32px;
        --space-12: 48px;
        
        /* Border radius - minimal, sharp for professional feel */
        --radius-sm: 4px;
        --radius-md: 6px;
        --radius-lg: 8px;
        
        /* Typography */
        --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        --font-mono: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
        
        /* Transitions */
        --transition-fast: 150ms cubic-bezier(0.25, 1, 0.5, 1);
        --transition-base: 200ms cubic-bezier(0.25, 1, 0.5, 1);
      }
      
      * {
        box-sizing: border-box;
      }
      
      body {
        margin: 0;
        padding: 0;
        font-family: var(--font-sans);
        font-size: 14px;
        line-height: 1.5;
        color: var(--color-text-primary);
        background: var(--color-bg-base);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
      
      /* Typography hierarchy */
      h1, h2, h3, h4, h5, h6 {
        margin: 0;
        font-weight: 600;
        letter-spacing: -0.02em;
        line-height: 1.2;
      }
      
      h1 { font-size: 24px; }
      h2 { font-size: 18px; }
      h3 { font-size: 16px; }
      h4 { font-size: 14px; }
      
      p {
        margin: 0;
      }
      
      /* Monospace for data */
      .mono {
        font-family: var(--font-mono);
        font-variant-numeric: tabular-nums;
      }
      
      /* Utility classes for consistent styling */
      .text-secondary { color: var(--color-text-secondary); }
      .text-muted { color: var(--color-text-muted); }
      .text-faint { color: var(--color-text-faint); }
      
      /* Card component - borders-only approach for professional feel */
      .card {
        background: var(--color-bg-surface);
        border: 0.5px solid var(--color-border);
        border-radius: var(--radius-md);
        padding: var(--space-4);
      }
      
      .card-lg {
        padding: var(--space-6);
      }
      
      /* Button base */
      .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: var(--space-2) var(--space-4);
        font-size: 13px;
        font-weight: 500;
        border-radius: var(--radius-sm);
        border: none;
        cursor: pointer;
        transition: all var(--transition-fast);
        white-space: nowrap;
      }
      
      .btn-primary {
        background: var(--color-accent);
        color: white;
      }
      
      .btn-primary:hover {
        background: var(--color-accent-hover);
      }
      
      .btn-secondary {
        background: var(--color-bg-subtle);
        color: var(--color-text-primary);
        border: 0.5px solid var(--color-border);
      }
      
      .btn-secondary:hover {
        background: var(--color-bg-hover);
      }
      
      /* Label styling */
      .label {
        font-size: 11px;
        font-weight: 500;
        letter-spacing: 0.02em;
        text-transform: uppercase;
        color: var(--color-text-muted);
      }
      
      /* Status badges */
      .badge {
        display: inline-flex;
        align-items: center;
        padding: 2px var(--space-2);
        font-size: 11px;
        font-weight: 500;
        border-radius: var(--radius-sm);
        white-space: nowrap;
      }
      
      .badge-success {
        background: var(--color-success-bg);
        color: var(--color-success);
      }
      
      .badge-warning {
        background: var(--color-warning-bg);
        color: var(--color-warning);
      }
      
      .badge-error {
        background: var(--color-error-bg);
        color: var(--color-error);
      }
      
      .badge-neutral {
        background: var(--color-bg-subtle);
        color: var(--color-text-secondary);
        border: 0.5px solid var(--color-border);
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
